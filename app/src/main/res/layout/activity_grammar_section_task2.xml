<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_2"
    tools:context=".grammar.GrammarSectionTask2">

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_grammar_sections_menu_from_task_2_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/grammar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/grammar_title"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="176dp"
        android:fontFamily="@font/allerta"
        android:text="@string/grammar_section"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grammar_section_task_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="@string/Task_2"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grammar_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grammar_section_task_2_exercise"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/allerta"
        android:text="@string/grammar_section_task_1_title"
        android:textAlignment="center"
        android:textColor="@color/dark_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <ScrollView
        android:layout_width="375dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grammar_section_task_2_exercise"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/grammar_section_table_activity_constructor"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.478"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grammar_section_task_1_exercise"
                app:layout_constraintVertical_bias="0.084">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/opacity_lavender">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="@string/grammar_section_column_question"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="@string/grammar_section_column_answer"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="Key"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/pale_violet_red" />

                <TableRow
                    android:id="@+id/grammar_section_task_2_A_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="@string/grammar_section_task_2_exercise_A"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/grammar_section_task_2_A_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:textStyle="italic" />

                    <ImageButton
                        android:id="@+id/grammar_section_task_2_A_imageButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/key" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/opacity_pale_violet_red" />

                <TableRow
                    android:id="@+id/grammar_section_task_2_B_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="@string/grammar_section_task_2_exercise_B"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/grammar_section_task_2_B_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:textStyle="italic" />

                    <ImageButton
                        android:id="@+id/grammar_section_task_2_B_imageButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/key" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/opacity_pale_violet_red" />

                <TableRow
                    android:id="@+id/grammar_section_task_2_C_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="@string/grammar_section_task_2_exercise_C_part_1"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/grammar_section_task_2_C_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/allerta"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:textStyle="italic" />

                    <ImageButton
                        android:id="@+id/grammar_section_task_2_C_imageButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/key" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/opacity_pale_violet_red" />

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>